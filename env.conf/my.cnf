[client]
port = 3306
socket = /apps/svr/mysql_3306/run/mysql-3306.sock
default-character-set=utf8

[mysql]
no-auto-rehash
default-character-set=utf8

[mysqld]
##Audit
#plugin-load=audit_log.so
#audit_log_policy=ALL
#audit_log_format=NEW
#audit_log_file=/apps/sharedstorage/logs/mysql_3306/audit.log
#audit_log_rotate_on_size=1024M
#audit_log_rotations=20
#binlog_cache_size=4M
##### Misc
auto_increment_offset=1
auto_increment_increment=2
user = apps
port = 3306
character-set-server=utf8
default-storage-engine=INNODB
sql-mode="STRICT_TRANS_TABLES,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"
socket = /apps/svr/mysql_3306/run/mysql-3306.sock
basedir = /apps/svr/mysql_3306
datadir = /apps/svr/mysql_3306/data
ft_min_word_len=1
#event_scheduler = 1
max_allowed_packet = 32M
##### Performance
#net_read_timeout = 60
#wait_timeout = 100
#interactive_timeout = 100
open_files_limit = 2048
back_log = 200
flush_time=0
query_cache_type=0
binlog_row_event_max_size=8K
max_connections = 3000
max_connect_errors = 1000
external-locking = FALSE
performance_schema = 1
##### Buffers & Cache
table_open_cache = 2048
table_definition_cache = 2048
max_heap_table_size = 246M
tmp_table_size = 246M
sort_buffer_size = 4M
join_buffer_size = 4M
thread_cache_size = 256
query_cache_size = 512M
query_cache_limit = 2M
query_cache_min_res_unit = 2k
thread_stack = 192K
read_buffer_size = 4M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 64M
#### Logs
log-output=file
general-log=0
general_log_file=/apps/svr/mysql_3306/logs/mysql.log
log-error=/apps/svr/mysql_3306/logs/mysql.err
log_warnings = 2
slow-query-log
slow-query-log-file=/apps/svr/mysql_3306/logs/slowlog.log
long_query_time = 0.1
#log-queries-not-using-indexes = 1
#log-slow-admin-statements = 1
#log-slow-slave-statements = 1
#### binlog & replication
server-id = 1
binlog_format = ROW
log-bin = /apps/svr/mysql_3306/logs/binlog/mysql-bin
binlog_cache_size = 4M
max_binlog_cache_size = 2G
max_binlog_size = 1G
expire_logs_days = 7
sync_binlog = 0
#read-only=1 #mysqlֻ��
#relay-log=/apps/svr/mysql_3306/logs/relaylog/mysql-relay.log #mysql�ӿ�relaylog
#rpl_semi_sync_master_enabled = 1
#rpl_semi_sync_master_timeout = 5000  # 5 second
#rpl_semi_sync_slave_enabled = 1
#relay-log-purge = 0
# sync_binlog = 0
# skip-slave-start = 1
log-slave-updates = 1
#### Myisam engine
# key_buffer_size = 32M
# myisam_sort_buffer_size = 128M
# myisam_max_sort_file_size = 10G
# myisam_max_extra_sort_file_size = 10G
# myisam_repair_threads = 1
# myisam_recover
# lower_case_table_names = 1
# skip-name-resolve
# slave-skip-errors = 1032,1062
#### Innodb engine
innodb_concurrency_tickets=5000
innodb_old_blocks_time=1000
innodb_stats_on_metadata=0
innodb_checksum_algorithm=0
innodb_additional_mem_pool_size = 256M
innodb_buffer_pool_size = 18G
innodb_buffer_pool_instances=8
innodb_file_per_table = 1
innodb_thread_concurrency = 0
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 6M
innodb_log_file_size = 256M
transaction_isolation = READ-COMMITTED
innodb_flush_method = O_DIRECT
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_autoextend_increment=64M
innodb_open_files=65536
#### Other Set
gtid_mode = ON
enforce-gtid-consistency = true
#sqlmode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES
####Validate Password
plugin-load=validate_password.so
validate_password_policy=1
validate_password_mixed_case_count=2
validate_password_number_count=2
validate_password_special_char_count=2

[mysqldump]
quick
max_allowed_packet = 32M
[mysqld_safe]
pid-file=/apps/svr/mysql_3306/run/mysqld-3306.pid